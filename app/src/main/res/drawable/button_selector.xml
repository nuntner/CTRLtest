<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when button is selected (connected) -->
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/pri_green" /> <!-- Green background for connected state -->
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Default state (disconnected) -->
    <item android:state_selected="false">
        <shape>
            <solid android:color="@color/gray_25" /> <!-- Gray background for disconnected state -->
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>
